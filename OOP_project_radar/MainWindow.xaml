<Window x:Class="OOP_project_radar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="475">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.61*"></ColumnDefinition>
            <ColumnDefinition Width="0.39*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border x:Name="CanvasBorder" Margin="0,0,0,54">
            <Canvas  Grid.Column="0"  Loaded="Canvas_Loaded" Name="CanvasDraw" Background="Black" >
                <Image Name="ImageBox"></Image>
            </Canvas>
        </Border>
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <Button Height="50" Margin="41,0,31,0"/>
            <Button Height="50" Margin="41,0,31,0"/>
            <Button Height="50" Margin="41,0,31,0"/>
            <Button Height="50" Margin="41,0,31,0"/>
        </StackPanel>
    </Grid>
</Window>
